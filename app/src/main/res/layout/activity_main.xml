<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:visibility="invisible"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本地测试"
        android:id="@+id/localTest"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL测试"
        android:id="@+id/remoteTest"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/localTest"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/enterFaceIn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:text="人脸核身进入"
        android:textColor="#FFFFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="100dp"
        android:background="@drawable/bt_blue"
        android:layout_below="@+id/remoteTest" />

    <Button
        android:id="@+id/similarity"
        android:layout_above="@+id/enterFaceIn"
        android:text="相似度"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/discern"
        android:layout_alignBottom="@+id/warning"
        android:text="识别"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/card"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/warning"
        android:layout_toRightOf="@+id/discern"
        android:text="身份证"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/xiangsi"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/warning"
        android:layout_toRightOf="@+id/card"
        android:text="相似"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="invisible"
        android:id="@+id/warning"
        android:text="注意:使用之前请在Config.java文件里设置自己申请的 APP_ID, SECRET_ID, SECRET_KEY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
